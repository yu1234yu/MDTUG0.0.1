<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/img_book"
        android:id="@+id/img_book"
        android:layout_alignParentLeft="true"
        android:layout_width="80dp"
        android:layout_height="110dp" />
    <TextView
        android:id="@+id/lib_name"
        android:text="书名"
        android:textSize="20sp"
        android:textColor="@color/blackFont"
        android:layout_toRightOf="@+id/img_book"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lib_author"
        android:layout_toRightOf="@+id/img_book"
        android:layout_below="@+id/lib_name"
        android:text="作者"
        android:textSize="16sp"
        android:textColor="#818184"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lib_ISBN"
        android:layout_toRightOf="@+id/img_book"
        android:layout_below="@+id/lib_author"
        android:text="ISBN"
        android:textSize="16sp"
        android:textColor="#818184"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>